.modal-bg
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(144, 158, 173, 0.8)
  z-index: 1

.modal-list
  position: fixed
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  padding: 10px 40px
  background-color: #fff
  color: #283848
  border: 1px solid #ccc
  border-radius: 5px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1)
  z-index: 2


  @media screen and (max-width: 480px)
    width: 90%
    max-width: 320px

.form-todo
  text-align: left
  color: #4e657b

  label
    margin-bottom: 5px
    display: block
    font-size: 12px

  input,
  textarea
    width: 100%
    margin-bottom: 10px
    padding: 8px
    box-sizing: border-box
    border: 1px solid #bfdaeb
    border-radius: 3px

    &:focus
      border-color: #55abff
      outline: none

  textarea
    resize: vertical

.headerModal
  display: flex
  justify-content: flex-end
  position: absolute
  top: 10px
  right: 10px
  cursor: pointer

  button
    cursor: pointer
    border: none
    background: none
    padding: 0
    font-size: 14px
    color: #283848

.radioStyle
  display: flex
  justify-content: space-between
  align-items: center

.radioCustom
  display: flex
  align-items: center

  label
    font-size: 11px

  input
    width: 20px
    height: 20px
    margin-right: 4px
    cursor: pointer
    border: 2px solid #283848
    border-radius: 50%

.buttonAdd
  margin-left: auto
  button
    padding: 10px 20px
    background-color: #a6c1d2
    color: #fff
    border: none
    border-radius: 3px
    cursor: pointer

    &:hover
      background-color: #16cf8c
      
.edit-modal
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 1000 


.modal-container 
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  align-items: center
  z-index: 9999


.modal-bg 
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(0, 0, 0, 0.1)


