.container
  display: flex
  justify-content: space-between
  height: 100%
  overflow-y: auto

    

.category-bar
  display: flex
  flex-direction: column
  width: 16%
  overflow-y: auto
  height: 100vh
  min-width: 100px
  background-color: #f4fbff
  padding: 10px
  cursor: pointer
  justify-content: center
  align-items: center
  text-align: left

.category-item
  margin-bottom: 10px
  padding: 8px
  border-radius: 5px
  transition: background-color 0.3s
  display: flex
  justify-content: space-between

.category-item:hover
  background-color: #ddd

.category-item.active
  color: #2693ff

.category-info
  display: flex
  align-items: center

.category-name
  margin-right: 5px

.counter-circle
  background-color: #2693ff
  border-radius: 50%
  padding: 3px
  color: white
  font-size: 13px
  width: 15px
  height: 15px
  display: flex
  align-items: center
  justify-content: center

.dashboard-container
  position: relative
  width: 100%
  background-color: #e9f4fb
  overflow-y: auto
