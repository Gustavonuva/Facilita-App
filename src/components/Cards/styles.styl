.containerCard
  display: flex
  flex-direction: column

.box
  display: flex
  align-items: center
  position: relative 
  justify-content: space-between
  padding: 10px
  background-color: #fff
  margin-bottom: 15px
  border-radius: 8px
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1)

.checkbox
  display: none  

.custom-checkbox
  position: relative
  display: inline-block
  width: 30px
  height: 30px
  border-radius: 3px
  background-color: #e2eef5
  cursor: pointer

.checkmark
  position: absolute
  top: 50%
  left: 50%
  width: 100%
  height: 100%
  display: flex
  justify-content: center
  transform: translate(-50%, -50%)
  background-color: #1ad18f
  color: #fff
  font-size: 16px  
  line-height: 30px  
  visibility: hidden  
  border-radius: 3px

.checkbox:checked + .custom-checkbox .checkmark
  visibility: visible  

.task-details
  flex-grow: 1
  margin-left: 10px

.chip
  border-radius: 16px
  color: #fff
  padding: 2px 7px
  font-size: 12px

.urgente
  background-color: #ff2e79  

.importante
  background-color: #ffc42e

.chip-container
  display: flex
  align-items: center
  border-radius: 16px
  margin-right: 10px

.opcoes
  cursor pointer

.overlay 
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(0, 0, 0, 0.1) 
  z-index: 1
  border-radius: 8px

.opcoes-menu 
  background-color: #fff; 
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); 
  z-index: 1;
  padding: 5px 10px;
  position: fixed;
  display: flex;  
  align-items: left 
  flex-direction: column;  


.menu-button 
  color: black;
  border: none;
  display: flex;
  align-items: center;  
  cursor: pointer;
  background-color: #fff;


.menu-button::before 
  content: "•";
  color: #4CAF50;
  font-size: 40px; 
  margin-right: 5px;
  display: flex;
  align-items: center;  


.delete-button::before 
  content: "•";
  color: #747474;
  font-size: 40px; 
  margin-right: 5px;
  display: flex;
  align-items: center;  

.task-details.completed 
  text-decoration: line-through;


.modal 
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;


.modal-content 
  text-align: center;
  background: #fff;
  padding: 50px;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;


.trash-icon 
  width: 150px;
  height: 150px;


.botoesExc button 
  margin: 5px;
  border: none;
  padding: 10px 20px;
  border-radius: 6px;
  transition: transform 0.3s ease;


.botoesExc button:hover 
  transform: scale(1.1);


.cancel-button 
  background-color: #1ad18f;


.confirm-button 
  background-color: #ff4874;
